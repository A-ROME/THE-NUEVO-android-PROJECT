<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010" 
    >

      <Button
          android:id="@+id/home"
          android:layout_width="150dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/academics"
          android:layout_alignParentTop="true"
          android:layout_marginTop="117dp"
          android:background="@drawable/back"
          android:gravity="center"
          android:text="@string/home"
          android:tex
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <Button
          android:id="@+id/academics"
          android:layout_width="150dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/social"
          android:layout_below="@+id/home"
          android:layout_marginTop="40dp"
          android:background="@drawable/back"
          android:gravity="center"
          android:text="@string/academics"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <Button
          android:id="@+id/social"
          android:layout_width="150dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/profile"
          android:layout_below="@+id/academics"
          android:layout_marginTop="37dp"
          android:background="@drawable/back"
          android:gravity="center"
          android:text="@string/socialnet"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <Button
          android:id="@+id/profile"
          android:layout_width="150dp"
          android:layout_height="35dp"
          android:layout_below="@+id/social"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="36dp"
          android:background="@drawable/back"
          android:gravity="center"
          android:text="@string/yourprofile"
          android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>